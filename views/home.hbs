              <p>{{popAnimeCDesc}}</p>
            </div>
          </div>
        </div>
      </table>
        <div class="well">
        <ul class="nav nav-tabs nav-justified">
          <li class="active"><a data-toggle="tab" href="#anime">New Anime <span class="badge">{{newAnimeCount}}</span></a></li>
          <li><a data-toggle="tab" href="#episodes">New Episodes <span class="badge">{{newEpisodeCount}}</span></a></li>
        </ul>
        <div class="tab-content">
          <div id="anime" class ="tab-pane fade in active">
            <h3>Today</h3>
            <div class="media">
              <div class="media-left">
                <a href="pages/list/Fairy Tail.html"><img src="images/{{newAnime}}cover.jpg" class="media-object" style="width:60px"></a>
              </div>
              <div class="media-body">
                <h4 class="media-heading"><a href="pages/list/Fairy Tail.html">{{newAnime}}</a></h4>
                <p>{{newAnimeDesc}}</p>
                </div>
              </div>
        </div>
        <div id="episodes" class="tab-pane fade">
          <h3>Today</h3>
          <blockquote>
            <h5>{{newEpisode}}</h5>
            <footer>{{newEpisodeDesc}}</footer>
